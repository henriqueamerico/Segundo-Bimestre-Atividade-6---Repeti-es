programa {
  
  funcao inicio() {
    inteiro numero, pares = 0, impares = 0

    escreva("Digite 5 números inteiros:\n")

    para (inteiro i = 1; i <= 5; i++) {
      leia(numero)

      se (numero % 2 == 0) {
        pares = pares + 1
      } senao {
        impares = impares + 1
      }
    }

    escreva("Essa é a quantia de pares: ", pares, "\n")
    escreva("Essa é a quantia de ímpares: ", impares, "\n")
  }
}
